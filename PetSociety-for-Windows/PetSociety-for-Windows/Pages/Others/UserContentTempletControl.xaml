<UserControl x:Class="PetSociety_for_Windows.Pages.Others.UserContentTempletControl"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="100" d:DesignWidth="250" d:Margin="0,0,0,0" Background="White" BorderBrush="Black">

    <StackPanel MinHeight="100" MinWidth="200">
        <StackPanel.Background>
            <SolidColorBrush Color="{StaticResource PhoneAccentColor}"/>
        </StackPanel.Background>
        <Grid>
            <TextBlock TextWrapping="Wrap" Text="dsa" x:Name="title" Margin="60,0,0,0"/>
            <Image x:Name="male" Height="43" Margin="0,0,195,0" Source="/Resources/male.png" />
            <Image x:Name="female" Height="43" Margin="0,0,195,0" Source="/Resources/female.png" />
            <TextBlock TextWrapping="Wrap" Text="Description" x:Name="Description" Margin="0,43,0,-27" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16"/>
        </Grid>
    </StackPanel>

</UserControl>